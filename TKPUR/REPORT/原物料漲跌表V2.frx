namespace FastReport
{
  public class ReportScript
  {

    private int rowCounter = 0; // 記錄目前是第幾行
    
    private void Matrix1_BeforePrint(object sender, EventArgs e)
    {
      if (sender is FastReport.ReportComponentBase component)
      {
      // 交錯行顏色設定
      if (rowCounter % 2 == 0)
        component.FillColor = System.Drawing.Color.LightGray; // 偶數行
      else
      component.FillColor = System.Drawing.Color.White; // 奇數行

      rowCounter++; // 每執行一次，計數+1
      }
    }
  }
}
</ScriptText>
